{
    "name": "ulrack/dbal-pdo",
    "description": "Database abstraction layer package implementing PDO from Ulrack",
    "keywords": ["dbal", "pdo"],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require":
    {
        "php": "^7.2",
        "ulrack/dbal": "1.0"
    },
    "authors": [
    {
        "name": "Marcel Frankruijter",
        "homepage": "https://www.ulrack.com/",
        "role": "Developer"
    }],
    "config":
    {
        "sort-packages": true
    },
    "autoload":
    {
        "psr-4":
        {
            "Ulrack\\Dbal\\Pdo\\": "src/"
        },
        "autoload-dev":
        {
            "psr-4":
            {
                "Ulrack\\Dbal\\Pdo\\Tests\\": "tests/"
            }
        }
    },
    "archive":
    {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev":
    {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
